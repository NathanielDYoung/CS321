<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="com.cs321.DataEntryController" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" alignment="center" hgap="10" vgap="10" styleClass="root">
   <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
      <Label text="Enter your name" style="-fx-font-family: serif" 
      GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="1"/>
      
      <TextField id="name" fx:id="name" layoutX="115.0" layoutY="28.0" style="-fx-font-family: serif" 
      GridPane.columnIndex="1" GridPane.rowIndex="0" GridPane.columnSpan="10"/>
      
      <Label text="Enter your spouses first name" style="-fx-font-family: serif" 
      GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="1"/>
      <TextField id="spouse_name" fx:id="spouse_name" layoutX="115.0" layoutY="28.0" style="-fx-font-family: serif"  
      GridPane.columnIndex="1" GridPane.rowIndex="1" GridPane.columnSpan="10"/>
      <Label text="Enter your desired status" style="-fx-font-family: serif"  
      GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="1"/>
      <TextField id="status" fx:id="status" layoutX="115.0" layoutY="28.0" style="-fx-font-family: serif"  
      GridPane.columnIndex="1" GridPane.rowIndex="2" GridPane.columnSpan="10"/>
      <Button fx:id="submit" text="Submit" onAction="#createReport" style="-fx-font-family: serif"  
      GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="3"/>
      <Button fx:id="cancel" text="Cancel" onAction="#cancel" style="-fx-font-family: serif"  
      GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="3"/>
   <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
</GridPane>
