<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs321.ReviewController">
   <children>
      <Label text="Review" style="-fx-font-family: serif; -fx-font-weight: bold"/>            
      <Button fx:id="next" text="Next Item" onAction="#next" style="-fx-font-family: serif"/>
         <Label text="Report Information" style="-fx-font-family: serif; -fx-font-weight: bold"/>
            <Button fx:id="view" text="View Item" onAction="#view" style="-fx-font-family: serif"/>

         <Label text="Edit Report" style="-fx-font-family: serif; -fx-font-weight: bold"/>
            <Label text="Modify user information:" style="-fx-font-family: serif"/>
            <TextField id="user" fx:id="user" layoutX="115.0" layoutY="28.0" style="-fx-font-family: serif"/>
            <Label text="Modify spouse information:" style="-fx-font-family: serif"/>
            <TextField id="spouse" fx:id="spouse" layoutX="115.0" layoutY="28.0" style="-fx-font-family: serif"/>
            <Label text="Modify marriage status:" style="-fx-font-family: serif"/>
            <TextField id="marriage" fx:id="marriage" layoutX="115.0" layoutY="28.0" style="-fx-font-family: serif"/>
            <Button fx:id="edit" text="Edit" onAction="#edit" style="-fx-font-family: serif"/>
      
         <Label text="Finish Review" style="-fx-font-family: serif; -fx-font-weight: bold"/>
            <Button fx:id="finish" text="Finish Item" onAction="#finish" style="-fx-font-family: serif"/>            

   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>
</VBox>
