<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.cs321.ApprovalController">
   <children>
      <Label text="Enter client name" style="-fx-font-family: serif"/>
      <TextField id="client_name" fx:id="client_name" layoutX="115.0" layoutY="28.0" style="-fx-font-family: serif"/>
      <Label text="Enter current marriage status (Single, Married, Divorced)" style="-fx-font-family: serif"/>
      <TextField id="current_status" fx:id="current_status" layoutX="115.0" layoutY="28.0" style="-fx-font-family: serif"/> 
      <Label text="Enter desired status change (Single, Married, Divorced)" style="-fx-font-family: serif"/>
      <TextField id="desired_status" fx:id="desired_status" layoutX="115.0" layoutY="28.0" style="-fx-font-family: serif"/> 
      <Button fx:id="approve" text="Approve" onAction="#sendApproval" style="-fx-font-family: serif"/>
      <Button fx:id="deny" text="Deny" onAction="#denyApproval" style="-fx-font-family: serif"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
   </padding>
</VBox>